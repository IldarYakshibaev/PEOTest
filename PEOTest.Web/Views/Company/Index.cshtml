@{
    ViewData["Title"] = "Company";
}
@model IEnumerable<CompanyViewModel>

<div class="text-center">
    <h1>Список компаний</h1>
    <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-sm" type="button">Назад</a>
    <table class="table">
        <tr>
            <th>
                Название компании
            </th>
            <th>
            </th>
        </tr>
        @foreach (CompanyViewModel emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td><a asp-action="Edit" asp-route-companyId="@emp.Id">Редактировать</a></td>
            </tr>
        }
    </table>
</div>
