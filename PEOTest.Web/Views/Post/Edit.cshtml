@model PEOTest.Web.Models.PostViewModel

<div class="edit-post-form">
    <h2>Редактирование должности</h2>
    <form asp-action="Edit" asp-controller="Post">
        <table>
            <tr>
                <td>
                    <label asp-for="Name">Должность</label>
                </td>
                <td>
                    <div class="input-group input-group-sm mb-1">
                        <input class="form-control" aria-label="Small" asp-for="Name" />
                    </div>
                </td>
                <td>
                    <span asp-validation-for="Name"></span>
                </td>
            </tr>
        </table>
        <input asp-for="Id" type="hidden" />
        <div class="action-btn">
            <button class="btn btn-info btn-sm" type="submit">Сохранить</button>
            <a asp-action="Index" class="btn btn-info btn-sm" type="button">Назад</a>
        </div>
    </form>
</div>
